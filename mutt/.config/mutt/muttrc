macro index,pager <f3> '<change-folder>~/mail/school/INBOX<enter>'

folder-hook '~/mail/school' 'source ~/.config/mutt/school.rc'
folder-hook '~/mail/home' 'source ~/.config/mutt/home.rc'

source ~/.config/mutt/home.rc

macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'

set markers = no
set sort = 'threads'
set sort_aux = 'last-date-received'
bind editor <space> noop


set spoolfile = "+INBOX"
